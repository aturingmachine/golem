{
  "exclude": [
    "src/djs/**",
    "dist/**",
    "client/**"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "types": [
      "node",
      "jest",
    ],
    "forceConsistentCasingInFileNames": true,
  },
}
