.tooltip-root
  position relative

.tooltip-root::after {
    position absolute
    left 50%
    top -6px
    transform translateX(-5%) translateY(65%)
    background rgba(255, 255, 255, 0.15)
    text-align center
    color #fff
    padding 4px 2px
    font-size 12px
    min-width 175px
    border-radius 5px
    pointer-events none
    opacity 0
}

.tooltip-root:hover::after,
.tooltip-root:hover::before {
   opacity 1
}


