{
  "include": [
    "src/**/*",
    "index.d.ts"
  ],
  "exclude": [
    "src/client/**",
    "dist/**",
    "specs/**",
    "test-utils/**/*.ts",
    // TODO Remove
    "src/web/**"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "types": [
      "node",
      "jest",
    ],
    "forceConsistentCasingInFileNames": true,
  },
}
